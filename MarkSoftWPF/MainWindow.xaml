                    <Image Source="img/icon4.png" Cursor="Hand"/>
                </Button>
                <Button Style="{StaticResource Buttons}" Click="Button_Click_Menu_3" Margin="0,0,0,20" Width="24"   Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="img/icon2.png" Cursor="Hand"/>
                </Button>
            </StackPanel>
        </Border>
